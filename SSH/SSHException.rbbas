		  Case LIBSSH2_ERROR_EAGAIN
		    Return "LIBSSH2_ERROR_EAGAIN"
		  Case ERR_CONNECTION_REFUSED
		    Return "ERR_CONNECTION_REFUSED"
		  Case LIBSSH2_ERROR_BUFFER_TOO_SMALL
		    Return "LIBSSH2_ERROR_BUFFER_TOO_SMALL"
